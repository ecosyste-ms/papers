<div class="card mb-3">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div class="flex-grow-1">
        <h5 class="card-title">
          <%= link_to project, project_path(project.ecosystem, project.name) %>
        </h5>

        <% if project.description %>
          <%= project.description %><br/>
        <% end %>

        <small class='text-muted'>
          Papers that mentioned: <%= number_with_delimiter project.mentions_count %><br>
        </small>
      </div>
      
      <div class="flex-shrink-0">
        <%= science_score_badge(project.science_score) %>
      </div>
    </div>
  </div>
</div>