<% @meta_title = "Packages with Software Mentions in Scientific Papers"%>
<% @meta_description = "Packages with Software Mentions in Scientific Papers" %>

<div class="container-sm">
  <ul class="nav nav-tabs my-3">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page">
        Projects
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter @pagy.count %>
        </span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="<%= papers_path %>">
        Papers
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter Paper.count %>
        </span>
      </a>
    </li>
    <%= render 'sort' %>
  </ul>

  <div class="row">
    <div class="col-lg">
      <% if @projects.empty? && params[:q].present? %>
        <div class="alert alert-info" role="alert">
          <h4 class="alert-heading">No results found</h4>
          <p>No projects found matching "<strong><%= params[:q] %></strong>".</p>
          <hr>
          <p class="mb-0">Try searching with different keywords or <%= link_to "browse all projects", projects_path, class: "alert-link" %>.</p>
        </div>
      <% else %>
        <%= render @projects %>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      <% end %>
    </div>
  </div>
</div>
