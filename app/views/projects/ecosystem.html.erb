<% @meta_description = "Projects in the #{params[:ecosystem]} ecosystem mentioned in scientific papers" %>

<div class="container-sm">
  <h2>
    <%= @meta_title = "#{params[:ecosystem]} projects"%>
    <span class='badge bg-secondary'>
      <%= number_with_delimiter @pagy.count %>
    </span>
  </h2>

  <div class="row">
    <div class="col-lg">
      <% if @projects.empty? && params[:q].present? %>
        <div class="alert alert-info" role="alert">
          <h4 class="alert-heading">No results found</h4>
          <p>No <%= params[:ecosystem] %> projects found matching "<strong><%= params[:q] %></strong>".</p>
          <hr>
          <p class="mb-0">Try searching with different keywords or <%= link_to "browse all #{params[:ecosystem]} projects", projects_ecosystem_path(ecosystem: params[:ecosystem]), class: "alert-link" %>.</p>
        </div>
      <% else %>
        <%= render @projects %>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      <% end %>
    </div>
  </div>
</div>
