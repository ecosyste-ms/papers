<%= @meta_title = "#{params[:ecosystem]} projects"%>
<%= @meta_description = "Projects in the #{params[:ecosystem]} ecosystem mentioned in scientific papers" %>

<div class="container-sm">
  <h2>
    <%= @meta_title = "#{params[:ecosystem]} projects"%>
    <span class='badge bg-secondary'>
      <%= number_with_delimiter @pagy.count %>
    </span>
  </h2>

  <div class="row">
    <div class="col-lg">
      <%= render @projects %>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
    </div>
  </div>
</div>
